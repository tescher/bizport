- content_for :title, "My Checklist"

.step
  .step-header.margin-bottom-0
    .step-title.text-center
      %i.icon.icon-large.icon-checklist.white
      %h1 My Checklist
  .row.header-buttons.text-center.margin-bottom-30
    .header-button.columns.small-4
      %a#submit-button SAVE
    .header-button.columns.small-4
      %a{ href: "", onclick: "window.print()" } PRINT
    .header-button.columns.small-4
      %a{ href: "mailto:?subject=How%20to%20start%20a%20business%20in%20Long%20Beach&body=http://bizport.longbeach.gov/checklist" } EMAIL
  .content-container
    .row.columns.small-12.medium-8.medium-offset-2.large-6.large-offset-3
      = form_tag(checklist_path, method: 'patch') do
        - ['plan','apply','grow'].each do |step_group|
          - Comfy::Cms::Page.published.find_by(slug: step_group).children.published.order(:position).each do |page|
          - checklist_category = page.slug.gsub('-', '_')
            .row.checklist
              %h3
                %a{ href: page.full_path, style: "text-decoration: underline;" }= page.label
              = render 'shared/checklist', category: checklist_category, embedded_in_form: true
        = submit_tag "Save My Progress", { class: 'button primary expanded' }

:javascript
  $('#submit-button').click(function () {
    $("input[type='submit']").click();
  })
