- if controller_name != 'sessions'
  .row.padding-h-10
    Already have an account?
    = link_to "Log In", new_session_path(resource_name), class: 'button secondary expanded', style: 'float: right;'

- if devise_mapping.registerable? && controller_name != 'registrations'
  .row.padding-h-10
    Need an account?
    = link_to "Create an Account", new_registration_path(resource_name), class: 'button secondary expanded', style: 'float: right;'

